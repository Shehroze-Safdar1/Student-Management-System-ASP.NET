@model IEnumerable<Ans_1.Models.Course>
@{
    ViewBag.Title = "Courses";
}

@section styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(16, 185, 129, 0.1));
            border-radius: 1.5rem;
            padding: 2rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #2563eb, #10b981);
            }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #2563eb, #10b981);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .page-subtitle {
            color: #64748b;
            font-size: 1.1rem;
            margin: 0;
        }

        .courses-container {
            background: white;
            border-radius: 1.5rem;
            box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
            border: 1px solid #e2e8f0;
            overflow: hidden;
        }

        .courses-header {
            background: linear-gradient(135deg, #f8fafc, #f1f5f9);
            padding: 2rem;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            justify-content: between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .courses-stats {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #64748b;
            font-weight: 500;
        }

            .stat-item i {
                color: #2563eb;
                font-size: 1.2rem;
            }

        .stat-number {
            font-weight: 700;
            color: #1e293b;
            font-size: 1.25rem;
        }

        .header-actions {
            margin-left: auto;
        }

        .btn-add-course {
            background: linear-gradient(135deg, #10b981, #059669);
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 0.75rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1rem;
        }

            .btn-add-course:hover {
                background: linear-gradient(135deg, #059669, #047857);
                transform: translateY(-2px);
                box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
                color: white;
                text-decoration: none;
            }

        .courses-table {
            width: 100%;
            border-collapse: collapse;
        }

            .courses-table th {
                background: #f8fafc;
                color: #374151;
                font-weight: 600;
                padding: 1.5rem 2rem;
                text-align: left;
                border-bottom: 2px solid #e5e7eb;
                font-size: 1rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
            }

            .courses-table td {
                padding: 1.5rem 2rem;
                border-bottom: 1px solid #f3f4f6;
                vertical-align: middle;
            }

            .courses-table tbody tr {
                transition: all 0.2s ease;
            }

                .courses-table tbody tr:hover {
                    background: #f8fafc;
                    transform: scale(1.01);
                }

        .course-name {
            font-weight: 600;
            color: #1e293b;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .course-icon {
            width: 40px;
            height: 40px;
            border-radius: 0.5rem;
            background: linear-gradient(135deg, #2563eb, #06b6d4);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
        }

        .action-buttons {
            display: flex;
            gap: 0.75rem;
            align-items: center;
        }

        .btn-action {
            padding: 0.75rem 1.25rem;
            border-radius: 0.5rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            border: 2px solid transparent;
        }

        .btn-edit {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: white;
        }

            .btn-edit:hover {
                background: linear-gradient(135deg, #d97706, #b45309);
                transform: translateY(-1px);
                box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
                color: white;
                text-decoration: none;
            }

        .btn-delete {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
        }

            .btn-delete:hover {
                background: linear-gradient(135deg, #dc2626, #b91c1c);
                transform: translateY(-1px);
                box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
                color: white;
                text-decoration: none;
            }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #64748b;
        }

        .empty-state-icon {
            font-size: 4rem;
            color: #cbd5e1;
            margin-bottom: 1rem;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
        }

        .empty-state-description {
            font-size: 1rem;
            margin-bottom: 2rem;
        }

        .search-section {
            padding: 1.5rem 2rem;
            background: #f8fafc;
            border-bottom: 1px solid #e2e8f0;
        }

        .search-container {
            position: relative;
            max-width: 400px;
        }

        .search-input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 3rem;
            border: 2px solid #e2e8f0;
            border-radius: 0.75rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

            .search-input:focus {
                outline: none;
                border-color: #2563eb;
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            font-size: 1.1rem;
        }

        @@media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            .courses-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1.5rem;
            }

            .courses-stats {
                flex-wrap: wrap;
                gap: 1rem;
            }

            .header-actions {
                margin-left: 0;
                width: 100%;
            }

            .btn-add-course {
                width: 100%;
                justify-content: center;
            }

            .courses-table {
                font-size: 0.875rem;
            }

                .courses-table th,
                .courses-table td {
                    padding: 1rem;
                }

            .action-buttons {
                flex-direction: column;
                gap: 0.5rem;
            }

            .btn-action {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-book-open"></i>
        Course Management
    </h1>
    <p class="page-subtitle">Manage your academic courses and programs</p>
</div>

<div class="courses-container">
    <div class="courses-header">
        <div class="courses-stats">
            <div class="stat-item">
                <i class="fas fa-book"></i>
                <span>Total Courses:</span>
                <span class="stat-number">@(Model?.Count() ?? 0)</span>
            </div>
            <div class="stat-item">
                <i class="fas fa-chart-line"></i>
                <span>Active Programs</span>
            </div>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Create", "Courses")" class="btn-add-course">
                <i class="fas fa-plus"></i>
                Add New Course
            </a>
        </div>
    </div>

    <div class="search-section">
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search courses..." id="courseSearch">
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="courses-table">
            <thead>
                <tr>
                    <th>Course Details</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="courseTableBody">
                @foreach (var item in Model)
                {
                    <tr class="course-row">
                        <td>
                            <div class="course-name">
                                <div class="course-icon">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <div>
                                    <div class="course-title">@Html.DisplayFor(modelItem => item.CourseName)</div>
                                    <div style="font-size: 0.875rem; color: #64748b; font-weight: normal;">
                                        Course ID: #@item.CourseId
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="action-buttons">
                                @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }, new { @class = "btn-action btn-edit" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.CourseId }, new { @class = "btn-action btn-delete", onclick = "return confirmDelete('" + item.CourseName + "')" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-book-open"></i>
            </div>
            <h3 class="empty-state-title">No Courses Found</h3>
            <p class="empty-state-description">
                Get started by creating your first course. You can add course details and manage your academic programs.
            </p>
            <a href="@Url.Action("Create", "Courses")" class="btn-add-course">
                <i class="fas fa-plus"></i>
                Create Your First Course
            </a>
        </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#courseSearch').on('input', function() {
                var searchTerm = $(this).val().toLowerCase();

                $('.course-row').each(function() {
                    var courseName = $(this).find('.course-title').text().toLowerCase();
                    var courseId = $(this).find('.course-name div:last-child div:last-child').text().toLowerCase();

                    if (courseName.includes(searchTerm) || courseId.includes(searchTerm)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });

                // Show "no results" message if no courses are visible
                var visibleRows = $('.course-row:visible').length;
                if (visibleRows === 0 && searchTerm !== '') {
                    if ($('.no-results').length === 0) {
                        $('#courseTableBody').append(
                            '<tr class="no-results"><td colspan="2" style="text-align: center; padding: 2rem; color: #64748b;"><i class="fas fa-search" style="font-size: 2rem; margin-bottom: 1rem; display: block;"></i>No courses found matching your search.</td></tr>'
                        );
                    }
                } else {
                    $('.no-results').remove();
                }
            });

            // Clear search on escape key
            $('#courseSearch').on('keydown', function(e) {
                if (e.key === 'Escape') {
                    $(this).val('');
                    $('.course-row').show();
                    $('.no-results').remove();
                }
            });

            // Add loading states for action buttons
            $('.btn-action').on('click', function(e) {
                if (!$(this).hasClass('btn-delete')) {
                    var btn = $(this);
                    var originalText = btn.html();
                    btn.html('<span class="loading"></span> Loading...');
                    btn.prop('disabled', true);
                }
            });
        });

        // Enhanced delete confirmation
        function confirmDelete(courseName) {
            return confirm('Are you sure you want to delete the course "' + courseName + '"?\n\nThis action cannot be undone and may affect enrolled students.');
        }

        // Add row animations
        $(document).ready(function() {
            $('.course-row').each(function(index) {
                $(this).css('opacity', '0');
                $(this).delay(index * 100).animate({
                    opacity: 1
                }, 500);
            });
        });
    </script>
}