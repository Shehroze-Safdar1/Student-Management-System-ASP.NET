@model IEnumerable<Ans_1.Models.Student>
@{
    ViewBag.Title = "Student Report";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary fw-bold">
                        <i class="fas fa-users me-2"></i>
                        Comprehensive Student Report
                    </h2>
                    <p class="text-muted">Detailed overview of all registered students</p>
                </div>
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>Dashboard
                    </a>
                    <a href="@Url.Action("ExportStudentData")" class="btn btn-success">
                        <i class="fas fa-download me-1"></i>Export CSV
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Summary -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count()</h4>
                    <p class="mb-0">Total Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(s => !s.StudentStatus)</h4>
                    <p class="mb-0">Active Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(s => s.StudentStatus)</h4>
                    <p class="mb-0">Withdrawn Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>@Model.Sum(s => s.Enrolls.Count)</h4>
                    <p class="mb-0">Total Enrollments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>
                        Student Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped" id="studentTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>Age</th>
                                    <th>Birth Date</th>
                                    <th>Status</th>
                                    <th>Enrolled Courses</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">#@student.StudentId</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(student.Picture))
                                            {
                                                <img src="@student.Picture" alt="Student Photo"
                                                     class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center"
                                                     style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user text-white"></i>
                                                </div>
                                            }
                                        </td>
                                        <td class="fw-semibold">@student.StudentName</td>
                                        <td>@student.Age years</td>
                                        <td>@student.BirthDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (student.StudentStatus)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-user-times me-1"></i>Withdrawn
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-user-check me-1"></i>Active
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (student.Enrolls.Any())
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var enroll in student.Enrolls.Take(3))
                                                    {
                                                        <span class="badge bg-primary small">@enroll.Course.CourseName</span>
                                                    }
                                                    @if (student.Enrolls.Count > 3)
                                                    {
                                                        <span class="badge bg-secondary small">+@(student.Enrolls.Count - 3) more</span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">No enrollments</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("Edit", "Students", new { id = student.StudentId })"
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="btn btn-outline-danger btn-sm"
                                                        onclick="confirmDelete(@student.StudentId, '@student.StudentName')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- DataTables CDN -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

<script>
$(document).ready(function() {
    $('#studentTable').DataTable({
        "pageLength": 10,
        "order": [[ 0, "desc" ]],
        "responsive": true,
        "language": {
            "search": "Search students:",
            "lengthMenu": "Show _MENU_ students per page",
            "info": "Showing _START_ to _END_ of _TOTAL_ students",
            "paginate": {
                "first": "First",
                "last": "Last",
                "next": "Next",
                "previous": "Previous"
            }
        }
    });
});

function confirmDelete(studentId, studentName) {
    if (confirm(`Are you sure you want to delete ${studentName}? This action cannot be undone.`)) {
        window.location.href = '@Url.Action("Delete", "Students")' + '/' + studentId;
    }
}
</script>