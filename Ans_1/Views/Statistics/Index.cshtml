@model Ans_1.Models.ViewModels.StatisticsVM
@{
    ViewBag.Title = "Statistics Dashboard";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="text-center">
                <h1 class="display-4 text-primary fw-bold">
                    <i class="fas fa-chart-bar me-3"></i>
                    Analytics Dashboard
                </h1>
                <p class="lead text-muted">Student Management System</p>
                <hr class="w-50 mx-auto">
            </div>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row mb-4">
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h3 class="fw-bold">@Model.TotalStudents</h3>
                    <p class="mb-0">Total Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-user-check fa-2x mb-2"></i>
                    <h3 class="fw-bold">@Model.ActiveStudents</h3>
                    <p class="mb-0">Active Students</p>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-user-times fa-2x mb-2"></i>
                    <h3 class="fw-bold">@Model.WithdrawnStudents</h3>
                    <p class="mb-0">Withdrawn</p>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-2x mb-2"></i>
                    <h3 class="fw-bold">@Model.TotalCourses</h3>
                    <p class="mb-0">Total Courses</p>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-secondary text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-clipboard-list fa-2x mb-2"></i>
                    <h3 class="fw-bold">@Model.TotalEnrollments</h3>
                    <p class="mb-0">Enrollments</p>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card bg-dark text-white shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-download fa-2x mb-2"></i>
                    <h3 class="fw-bold">
                        <a href="@Url.Action("ExportStudentData")" class="text-white text-decoration-none">
                            Export
                        </a>
                    </h3>
                    <p class="mb-0">Download Data</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row mb-4">
        <!-- Student Status Chart -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>
                        Student Status Distribution
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="studentStatusChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <!-- Age Distribution Chart -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Age Distribution
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="ageDistributionChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Course Enrollments Chart -->
        <div class="col-md-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Course Enrollment Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="courseEnrollmentChart" width="600" height="300"></canvas>
                </div>
            </div>
        </div>

        <!-- Recent Activities -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Recent Activities
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var activity in Model.RecentStudents)
                        {
                            <div class="list-group-item border-0 px-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@activity.StudentName</h6>
                                    <small class="text-muted">@activity.Date.ToString("MMM dd")</small>
                                </div>
                                <p class="mb-1">@activity.Action</p>
                                <small class="@(activity.Status == "Active" ? "text-success" : "text-warning")">
                                    @activity.Status
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-tools me-2"></i>
                        Quick Actions & Reports
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("StudentReport")" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-users me-2"></i>
                                Student Report
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("CourseReport")" class="btn btn-outline-info btn-block">
                                <i class="fas fa-book me-2"></i>
                                Course Report
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("EnrollmentReport")" class="btn btn-outline-success btn-block">
                                <i class="fas fa-clipboard-list me-2"></i>
                                Enrollment Report
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="@Url.Action("Index", "Students")" class="btn btn-outline-secondary btn-block">
                                <i class="fas fa-arrow-left me-2"></i>
                                Back to Students
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
$(document).ready(function() {
    // Student Status Chart
    var statusCtx = document.getElementById('studentStatusChart').getContext('2d');
    var statusChart = new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: [@Html.Raw(string.Join(",", Model.StudentStatusData.Select(x => "'" + x.Label + "'")))],
            datasets: [{
                data: [@Html.Raw(string.Join(",", Model.StudentStatusData.Select(x => x.Value)))],
                backgroundColor: [@Html.Raw(string.Join(",", Model.StudentStatusData.Select(x => "'" + x.Color + "'")))],
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });

    // Age Distribution Chart
    var ageCtx = document.getElementById('ageDistributionChart').getContext('2d');
    var ageChart = new Chart(ageCtx, {
        type: 'bar',
        data: {
            labels: [@Html.Raw(string.Join(",", Model.AgeGroups.Select(x => "'" + x.Label + "'")))],
            datasets: [{
                label: 'Number of Students',
                data: [@Html.Raw(string.Join(",", Model.AgeGroups.Select(x => x.Value)))],
                backgroundColor: [@Html.Raw(string.Join(",", Model.AgeGroups.Select(x => "'" + x.Color + "'")))],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Course Enrollment Chart
    var courseCtx = document.getElementById('courseEnrollmentChart').getContext('2d');
    var courseChart = new Chart(courseCtx, {
        type: 'horizontalBar',
        data: {
            labels: [@Html.Raw(string.Join(",", Model.CourseEnrollments.Select(x => "'" + x.Label + "'")))],
            datasets: [{
                label: 'Number of Students Enrolled',
                data: [@Html.Raw(string.Join(",", Model.CourseEnrollments.Select(x => x.Value)))],
                backgroundColor: [@Html.Raw(string.Join(",", Model.CourseEnrollments.Select(x => "'" + x.Color + "'")))],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            indexAxis: 'y',
            scales: {
                x: {
                    beginAtZero: true
                }
            }
        }
    });
});
</script>