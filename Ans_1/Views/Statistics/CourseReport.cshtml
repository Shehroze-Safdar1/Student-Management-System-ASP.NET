@model IEnumerable<Ans_1.Models.Course>
@{
    ViewBag.Title = "Course Report";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary fw-bold">
                        <i class="fas fa-book me-2"></i>
                        Course Analysis Report
                    </h2>
                    <p class="text-muted">Detailed overview of all courses and their enrollment statistics</p>
                </div>
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count()</h4>
                    <p class="mb-0">Total Courses</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>@Model.Sum(c => c.Enrolls.Count)</h4>
                    <p class="mb-0">Total Enrollments</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h4>@(Model.Any() ? Model.Average(c => c.Enrolls.Count).ToString("F1") : "0")</h4>
                    <p class="mb-0">Avg. Students per Course</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>
                        Course Details & Enrollment Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped" id="courseTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Course ID</th>
                                    <th>Course Name</th>
                                    <th>Total Students</th>
                                    <th>Active Students</th>
                                    <th>Withdrawn Students</th>
                                    <th>Enrolled Students</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model)
                                {
                                    var activeStudents = course.Enrolls.Count(e => !e.Student.StudentStatus);
                                    var withdrawnStudents = course.Enrolls.Count(e => e.Student.StudentStatus);

                                    <tr>
                                        <td class="fw-bold">#@course.CourseId</td>
                                        <td class="fw-semibold">@course.CourseName</td>
                                        <td>
                                            <span class="badge bg-primary fs-6">@course.Enrolls.Count</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">@activeStudents</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-warning">@withdrawnStudents</span>
                                        </td>
                                        <td>
                                            @if (course.Enrolls.Any())
                                            {
                                                <div class="student-list">
                                                    @foreach (var enroll in course.Enrolls.Take(3))
                                                    {
                                                        <span class="badge @(enroll.Student.StudentStatus ? "bg-secondary" : "bg-info") me-1 mb-1">
                                                            @enroll.Student.StudentName
                                                        </span>
                                                    }
                                                    @if (course.Enrolls.Count > 3)
                                                    {
                                                        <button class="badge bg-dark border-0" type="button"
                                                                data-bs-toggle="collapse"
                                                                data-bs-target="#students-@course.CourseId">
                                                            +@(course.Enrolls.Count - 3) more
                                                        </button>
                                                        <div class="collapse mt-2" id="students-@course.CourseId">
                                                            @foreach (var enroll in course.Enrolls.Skip(3))
                                                            {
                                                                <span class="badge @(enroll.Student.StudentStatus ? "bg-secondary" : "bg-info") me-1 mb-1">
                                                                    @enroll.Student.StudentName
                                                                </span>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">No enrollments</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-outline-info btn-sm"
                                                    onclick="showCourseDetails(@course.CourseId, '@course.CourseName')">
                                                <i class="fas fa-eye"></i> Details
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Course Details Modal -->
<div class="modal fade" id="courseDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Course Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="courseDetailsBody">
                <!-- Course details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- DataTables CDN -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

<script>
$(document).ready(function() {
    $('#courseTable').DataTable({
        "pageLength": 10,
        "order": [[ 2, "desc" ]], // Order by total students
        "responsive": true,
        "language": {
            "search": "Search courses:",
            "lengthMenu": "Show _MENU_ courses per page",
            "info": "Showing _START_ to _END_ of _TOTAL_ courses"
        }
    });
});

function showCourseDetails(courseId, courseName) {
    // You can implement AJAX call here to get detailed course information
    $('#courseDetailsBody').html(`
        <h6>Course: ${courseName}</h6>
        <p>Course ID: ${courseId}</p>
        <p>This is where you can show detailed course information, enrollment trends, etc.</p>
    `);
    $('#courseDetailsModal').modal('show');
}
</script>