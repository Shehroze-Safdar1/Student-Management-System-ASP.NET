<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Student Management System</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @RenderSection("styles", false)

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding-top: 70px;
            color: #333;
        }

        .navbar {
            background-color: #1e2a38;
            border-bottom: 1px solid #0d1b2a;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.2rem;
            color: #ffffff;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #d9d9d9;
        }

            .navbar-nav .nav-link.active {
                color: #0d6efd;
            }

        .main-container {
            padding: 30px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.05);
        }

        .footer {
            background-color: #ffffff;
            border-top: 1px solid #e5e5e5;
            padding: 15px 0;
            margin-top: 30px;
            font-size: 0.9rem;
            color: #555;
        }

            .footer .footer-content {
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 5px;
            }

                .footer .footer-content i {
                    color: red;
                }

        .dropdown-menu a {
            font-weight: 500;
        }

        .loading {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 2px solid #f3f3f3;
            border-top: 2px solid #0d6efd;
            border-radius: 50%;
            animation: spin 0.6s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-graduation-cap"></i>
                    StudentMS
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Dashboard", "Index", "Home", null, new { @class = "nav-link", @id = "nav-home" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "nav-link", @id = "nav-courses" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Students", "Index", "Students", null, new { @class = "nav-link", @id = "nav-students" })
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-chart-line me-1"></i>Reports
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="reportsDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Statistics")"><i class="fas fa-tachometer-alt me-1"></i>Dashboard</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("StudentReport", "Statistics")"><i class="fas fa-users me-1"></i>Student Report</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("CourseReport", "Statistics")"><i class="fas fa-book me-1"></i>Course Report</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("EnrollmentReport", "Statistics")"><i class="fas fa-clipboard-list me-1"></i>Enrollment Report</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="@Url.Action("ExportStudentData", "Statistics")"><i class="fas fa-download me-1"></i>Export Data</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="main-container">
            @RenderBody()
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <span>&copy; @DateTime.Now.Year Muhammad Shahroze</span>
                <i class="fas fa-heart"></i>
                <span>Student Management System</span>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            var currentPath = window.location.pathname.toLowerCase();
            $('.nav-link').removeClass('active');

            if (currentPath.includes('/home') || currentPath === '/') {
                $('#nav-home').addClass('active');
            } else if (currentPath.includes('/courses')) {
                $('#nav-courses').addClass('active');
            } else if (currentPath.includes('/students')) {
                $('#nav-students').addClass('active');
            }

            $('#btnplus').click(function (e) {
                e.preventDefault();
                var CourseContainer = $("#CourseContainer");
                var button = $(this);
                button.html('<span class="loading"></span> Adding...');
                button.prop('disabled', true);

                $.ajax({
                    url: "/Students/AddNewCourse",
                    type: "GET",
                    success: function (data) {
                        CourseContainer.append(data);
                        CourseContainer.children().last().hide().fadeIn(500);
                    },
                    error: function () {
                        alert('Error adding course. Please try again.');
                    },
                    complete: function () {
                        button.html('<i class="fas fa-plus"></i> Add Course');
                        button.prop('disabled', false);
                    }
                });
            });

            $(document).on("click", "#btnDeleteCourse", function (e) {
                e.preventDefault();
                var courseRow = $(this).closest('.course-row, tr, .form-group');

                if (confirm('Are you sure you want to remove this course?')) {
                    courseRow.fadeOut(300, function () {
                        $(this).remove();
                    });
                }
            });

            $('a[href^="#"]').on('click', function (event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 1000);
                }
            });

            $('form').on('submit', function () {
                var submitBtn = $(this).find('input[type="submit"], button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<span class="loading"></span> Processing...');
            });
        });

        $(window).on('beforeunload', function () {
            $('body').fadeOut(200);
        });
    </script>
</body>
</html>
